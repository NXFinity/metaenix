{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@caching/caching": [
        "libs/caching/src"
      ],
      "@caching/caching/*": [
        "libs/caching/src/*"
      ],
      "@database/database": [
        "libs/database/src"
      ],
      "@database/database/*": [
        "libs/database/src/*"
      ],
      "@email/email": [
        "libs/email/src"
      ],
      "@email/email/*": [
        "libs/email/src/*"
      ],
      "@kafka/kafka": [
        "libs/kafka/src"
      ],
      "@kafka/kafka/*": [
        "libs/kafka/src/*"
      ],
      "@logging/logging": [
        "libs/logging/src"
      ],
      "@logging/logging/*": [
        "libs/logging/src/*"
      ],
      "@redis/redis": [
        "libs/redis/src"
      ],
      "@redis/redis/*": [
        "libs/redis/src/*"
      ],
      "@throttle/throttle": [
        "libs/throttle/src"
      ],
      "@throttle/throttle/*": [
        "libs/throttle/src/*"
      ]
    }
  }
}